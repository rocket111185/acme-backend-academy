<nav class="navbar sticky-top navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">OSF Backend</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    {{#if header}}
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                {{#each header}}
                    <li class="nav-item">
                        <a class="nav-link" href="/category/{{this.id}}">{{this.name}}</a>
                    </li>
                {{/each}}
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    {{#if token}}
                        {{#if redirect}}
                            {{#with (urlencode 'redirect' redirect)}}
                                <a class="nav-link" href="/logout{{this}}">Logout</a>
                            {{/with}}
                        {{else}}
                            <a class="nav-link" href="/logout">Logout</a>
                        {{/if}}
                    {{else}}
                        {{#if redirect}}
                            {{#with (urlencode 'redirect' redirect)}}
                                <a class="nav-link" href="/login{{this}}">Login</a>
                            {{/with}}
                        {{else}}
                            <a class="nav-link" href="/login">Login</a>
                        {{/if}}
                    {{/if}}
                </li>
            </ul>
        </div>
